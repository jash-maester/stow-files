#!/bin/sh
# dmenu_run improved
# if a command ends with "!", it is started in term.

#termcmd=$TERMINAL
termcmd="st"
test -s $HOME/.dmenurc && . $HOME/.dmenurc

cmd="$(dmenu_path | dmenu $@)"
case $cmd in
    *\! ) ${termcmd} -e "$(printf "%s" "${cmd}" | cut -d'!' -f1)";;
    * ) ${cmd} ;;
esac
exit

